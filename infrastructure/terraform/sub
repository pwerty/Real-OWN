# 1. 테라폼 세팅: "구글 통제실과 연결할 무전기를 준비하라"
terraform {
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

# 2. 공급자 설정: "내 프로젝트를 타겟팅하라"
provider "google" {
  # 전술 2번(gcloud 로그인)을 썼기 때문에 비밀번호(JSON) 파일 경로를 적을 필요가 없습니다! 완벽합니다.
  project = "project-fe6e3124-4492-4fae-92c" # (주의: 프로젝트 '이름'이 아니라 영문/숫자로 된 'ID'입니다)
  region  = "us-west1"
  zone    = "us-west1-a"
}

# 3. 리소스 선언: "무료 서버(e2-micro) 1대를 건설하라"
resource "google_compute_instance" "free_tier_vm" {
  name         = "comrade-cs2map-server"
  machine_type = "e2-micro"

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-11" # 튼튼한 데비안 리눅스 장착
    }
  }

  network_interface {
    network = "default"
    access_config {
      # 이 빈 블록이 존재해야만 외부에서 접속 가능한 '공인 IP'가 부여됩니다.
    }
  }
}